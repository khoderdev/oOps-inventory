{
  "semi": true,
  "trailingComma": "none",
  "singleQuote": false,
  "printWidth": 500,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "auto",
  "insertPragma": false,
  "requirePragma": false,
  "overrides": [
    { "files": "*.{ts,tsx}", "options": { "parser": "typescript", "printWidth": 500, "trailingComma": "none" } },
    { "files": "*.{js,jsx}", "options": { "parser": "babel", "printWidth": 500, "trailingComma": "none" } },
    { "files": "*.json", "options": { "parser": "json", "tabWidth": 2 } },
    { "files": "*.md", "options": { "parser": "markdown", "proseWrap": "always", "printWidth": 80 } }
  ]
}
